
import React from "react";
import { Link } from "react-router-dom";
import { createPageUrl } from "@/utils";
import { ArrowRight, Star, Heart } from "lucide-react";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge"; // This import is still valid even if not used in the specific product card badge anymore.
import { Skeleton } from "@/components/ui/skeleton";
import { motion } from "framer-motion";

export default function FeaturedProducts({ products, loading }) {
  if (loading) {
    return (
      <section className="py-16 bg-gradient-to-b from-[#CDEAFF] to-[#DAD9FF]">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="text-center mb-12">
            <Skeleton className="h-8 w-60 mx-auto mb-4" />
            <Skeleton className="h-6 w-96 mx-auto" />
          </div>
          <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            {Array(4).fill(0).map((_, i) => (
              <div key={i} className="bg-white rounded-none p-6 shadow-[0_10px_30px_rgba(82,34,227,0.12)] h-[539.86px] flex flex-col">
                <Skeleton className="h-36 w-full mb-4" /> {/* Changed from h-44 to h-36 */}
                <Skeleton className="h-6 w-32 mb-2" />
                <Skeleton className="h-6 w-3/4 mb-3" />
                <Skeleton className="h-4 w-1/2 mb-4" />
                <div className="mt-auto">
                  <Skeleton className="h-12 w-full rounded-full" />
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>
    );
  }

  const bestSellers = (products || []).slice(0, 4);

  return (
    <section className="py-16 bg-gradient-to-b from-[#CDEAFF] to-[#DAD9FF]">
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <motion.div 
          className="text-center mb-10"
          initial={{ opacity: 0, y: 20 }}
          whileInView={{ opacity: 1, y: 0 }}
          transition={{ duration: 0.6 }}
        >
          <h2 className="text-3xl md:text-5xl font-extrabold text-[#4A1FB8]">
            Shop Best Sellers
          </h2>
        </motion.div>

        <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
          {bestSellers.map((product, index) => (
            <motion.div
              key={product.id || index}
              className="relative bg-white rounded-none shadow-[0_10px_30px_rgba(82,34,227,0.12)] hover:shadow-[0_12px_40px_rgba(82,34,227,0.18)] transition-all duration-300 overflow-visible h-[539.86px] flex" // Changed overflow-hidden to overflow-visible
              initial={{ opacity: 0, y: 24 }}
              whileInView={{ opacity: 1, y: 0 }}
              viewport={{ once: true }}
              transition={{ duration: 0.5, delay: index * 0.08 }}
            >
              {/* 顶部角标（严格参照：使用图片角标） */}
              {(product.is_bestseller || product.is_featured) && (
                <img
                  src={
                    product.is_bestseller
                      ? "https://magicspoon.imgix.net/files/best-seller-badge.png?v=1717791043&auto=format,compress&w=120"
                      : "https://magicspoon.imgix.net/files/MS_BYO_New_Badge.svg?v=1676482418&auto=format,compress&w=120"
                  }
                  alt={product.is_bestseller ? "Best Seller" : "New"}
                  className="absolute -top-4 left-4 w-12 h-12"
                />
              )}

              <div className="p-6 flex flex-col items-center justify-between h-full w-full">
                {/* 顶部内容块 */}
                <div className="w-full">
                  {/* 产品图（顶部居中） */}
                  <div className="w-full">
                    <img
                      src={product.image_url || "https://images.unsplash.com/photo-1526170375885-4d8ecf77b99f?w=600"}
                      alt={product.name}
                      className="w-full h-36 sm:h-40 object-contain mt-4"
                      loading="lazy"
                      decoding="async"
                    />
                  </div>

                  {/* 价格（现价 + 原价划线） */}
                  <div className="mt-6 text-center"> {/* Changed mt-5 to mt-6 */}
                    <div className="inline-flex items-center gap-2"> {/* New wrapper for price alignment */}
                      <span className="text-2xl font-extrabold text-[#4A1FB8]">${product.price}</span> {/* Changed h4 to span */}
                      {product.original_price && (
                        <span className="text-xl text-gray-400 align-middle"> {/* Changed text-lg to text-xl */}
                          <del>${product.original_price}</del>
                        </span>
                      )}
                    </div>
                  </div>

                  {/* 标题（大写分行） */}
                  <h3 className="mt-3 text-center font-extrabold text-[#4A1FB8] uppercase leading-tight text-2xl"> {/* Changed text-lg to text-2xl */}
                    {product.name}
                  </h3>

                  {/* 评分与评论数（紫色星星 + 大写 REVIEWS） */}
                  {(product.rating || product.reviews_count) && (
                    <div className="mt-4 flex items-center justify-center gap-3"> {/* Changed mt-3 to mt-4 and gap-2 to gap-3 */}
                      <div className="flex">
                        {[...Array(5)].map((_, i) => (
                          <Star
                            key={i}
                            className={`w-5 h-5 ${
                              i < Math.round(product.rating || 0)
                                ? "text-[#B300FF] fill-current"
                                : "text-gray-300"
                            }`} // Changed w-4 h-4 to w-5 h-5
                          />
                        ))}
                      </div>
                      <span className="text-xs font-semibold text-[#4A1FB8] opacity-80 uppercase tracking-wide">
                        {(product.reviews_count || 0).toLocaleString()} Reviews
                      </span>
                    </div>
                  )}
                </div>

                {/* CTA 按钮（保持样式不变） */}
                <Link to={createPageUrl(`ProductDetail?id=${product.id}`)} className="w-full mt-5">
                  <Button className="w-full h-12 rounded-full bg-[#5F2FE8] hover:bg-[#4C23C9] text-white font-bold">
                    <span className="mr-2">Shop Now</span>
                    <ArrowRight className="w-4 h-4" />
                  </Button>
                </Link>
              </div>
            </motion.div>
          ))}
        </div>

        {/* Shop All button */}
        <div className="mt-10 text-center">
          <Link to={createPageUrl("Products")}>
            <Button className="px-8 py-6 rounded-full bg-[#5F2FE8] hover:bg-[#4C23C9] text-white font-extrabold text-sm md:text-base">
              SHOP ALL PRODUCTS
            </Button>
          </Link>
        </div>
      </div>
    </section>
  );
}
