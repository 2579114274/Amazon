
import React, { useState, useEffect, Suspense } from "react";
import { Link } from "react-router-dom";
import { createPageUrl } from "@/utils";
import { LocalProduct as Product } from "@/api/localEntities";
import { Button } from "@/components/ui/button";
import { motion } from "framer-motion";

import HeroSection from "../components/home/HeroSection";
// 懒加载其余区块
const FeaturedProducts = React.lazy(() => import("../components/home/FeaturedProducts"));
const CategoryShowcase = React.lazy(() => import("../components/home/CategoryShowcase"));
const BrandStory = React.lazy(() => import("../components/home/BrandStory"));
const FindYourFavorite = React.lazy(() => import("../components/home/FindYourFavorite"));
const Benefits = React.lazy(() => import("../components/home/Benefits"));
const HowItWorks = React.lazy(() => import("../components/home/HowItWorks"));
const Testimonials = React.lazy(() => import("../components/home/Testimonials"));
const FAQ = React.lazy(() => import("../components/home/FAQ"));
const CtaBanner = React.lazy(() => import("../components/home/CtaBanner"));

// 轻量骨架
const SectionSkeleton = ({ height = 320 }) => (
  <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-16">
    <div className={`w-full rounded-2xl bg-gray-100/60 animate-pulse`} style={{ height }} />
  </div>
);

export default function HomePage() {
  const [featuredProducts, setFeaturedProducts] = useState([]);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    loadFeaturedProducts();
  }, []);

  const loadFeaturedProducts = async () => {
    try {
      const products = await Product.filter({ is_featured: true }, '-created_date', 8);
      setFeaturedProducts(products);
    } catch (error) {
      console.error('Failed to load featured products:', error);
    } finally {
      setLoading(false);
    }
  };

  return (
    // Apply Mabry-style font to the entire page content.
    // Assumes 'font-sans' utility class is configured in Tailwind CSS to use 'Mabry' or a similar geometric sans-serif font.
    <div className="min-h-screen font-sans">
      {/* Header section with background overlay */}
      {/* This container provides the background effect for the HeroSection */}
      <div className="relative bg-gradient-to-r from-blue-100 to-purple-100 overflow-hidden">
        {/* Background Overlay Element: A subtle pattern that visually 'overlays' the gradient background */}
        {/* This div sits visually behind the HeroSection content but acts as part of its decorative background. */}
        <div
          className="absolute inset-0 z-0 opacity-20"
          style={{
            // Example SVG pattern for subtle dots, optimized for inline use
            backgroundImage: `url("data:image/svg+xml,%3Csvg width='10' height='10' viewBox='0 0 10 10' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle cx='5' cy='5' r='4' fill='%236B7280' opacity='0.1'/%3E%3C/svg%3E")`,
            backgroundSize: '20px 20px',
            transform: 'rotate(45deg) scale(2)', // Rotate and scale for an abstract effect
          }}
        ></div>
        {/* Hero Section content. It will render on top of the background gradient and pattern. */}
        <HeroSection />
      </div>

      {/* Main content starts here */}
      <div className="relative bg-white z-10">
        {/* Replace old Features section with Find Your Favorite scroller */}
        <Suspense fallback={<SectionSkeleton height={180} />}>
          <FindYourFavorite />
        </Suspense>

        {/* Featured Products */}
        <Suspense fallback={<SectionSkeleton height={560} />}>
          <FeaturedProducts products={featuredProducts} loading={loading} />
        </Suspense>

        {/* Category Showcase */}
        <Suspense fallback={<SectionSkeleton height={724} />}>
          <CategoryShowcase />
        </Suspense>

        {/* Brand Story */}
        <Suspense fallback={<SectionSkeleton height={560} />}>
          <BrandStory />
        </Suspense>

        {/* 新增五个区块 */}
        <Suspense fallback={<SectionSkeleton height={600} />}>
          <Benefits />
        </Suspense>

        <Suspense fallback={<SectionSkeleton height={680} />}>
          <HowItWorks />
        </Suspense>

        <Suspense fallback={<SectionSkeleton height={520} />}>
          <Testimonials />
        </Suspense>

        <Suspense fallback={<SectionSkeleton height={300} />}>
          <FAQ />
        </Suspense>

        <Suspense fallback={<SectionSkeleton height={320} />}>
          <CtaBanner />
        </Suspense>

        {/* Newsletter */}
        <section className="py-16 bg-gradient-to-r from-purple-600 via-pink-600 to-red-600">
          <div className="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <motion.div
              initial={{ opacity: 0, y: 20 }}
              whileInView={{ opacity: 1, y: 0 }}
              transition={{ duration: 0.6 }}
              viewport={{ once: true }}
            >
              <h2 className="text-3xl md:text-4xl font-bold text-white mb-6">
                Subscribe to Our Newsletter
              </h2>
              <p className="text-xl text-purple-100 mb-8">
                Be the first to know about new products and exclusive offers
              </p>
              <div className="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
                <input
                  type="email"
                  placeholder="Enter your email address"
                  className="flex-1 px-6 py-3 rounded-full border-0 focus:ring-2 focus:ring-white/50 text-gray-900"
                />
                <Button className="bg-white text-purple-600 hover:bg-gray-100 px-8 py-3 rounded-full font-semibold">
                  Subscribe
                </Button>
              </div>
            </motion.div>
          </div>
        </section>
      </div>
    </div>
  );
}
